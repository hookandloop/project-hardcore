{{#each children}}
  <div class="link-list no-border">
    <div>
      {{#if slug}}
        <a class="hyperlink" href="./components/{{slug}}">
          {{name}}
          <svg class="icon" focusable="false" aria-hidden="true" role="presentation">
            <use href="#icon-launch"></use>
          </svg>
        </a>
      {{else}}
        <div>{{name}}</div>
      {{/if}}
      {{#if pages}}
        {{> toc-blocks children=pages}}
      {{/if}}
    </div>
  </div>
{{/each}}
